= form_for @player do |f|
  -if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :game_id
    = f.text_field :game_id
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :room_id
    = f.text_field :room_id
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
